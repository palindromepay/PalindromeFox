{
  "manifest_version": 3,
  "name": "PalindromePayFox",
  "version": "1.1.0",
  "description": "Pay for Amazon products with crypto using Palindrome Pay",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://amazon.com/*",
    "https://www.amazon.co.uk/*",
    "https://amazon.co.uk/*",
    "https://api.frankfurter.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://amazon.co.uk/*"
      ],
      "js": ["content.js"],
      "css": ["content-styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "logoPalindromePay.png",
        "palindromepay-crypto-escrow-payment.png"
      ],
      "matches": [
        "https://www.amazon.com/*",
        "https://amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://amazon.co.uk/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
